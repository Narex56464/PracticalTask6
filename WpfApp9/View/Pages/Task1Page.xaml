<Page x:Class="WpfApp9.View.Pages.Task1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task1Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 1"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 70 0 0">
            <TextBlock Text="Записать условие, которое является истинным, когда"
                       FontSize="20"/>

            <TextBlock Text="a) только одно из чисел А и В четное"
                       FontSize="15"
                       Margin="0 10 0 0"/>

            <TextBlock Text="b) каждое из чисел А,В,С кратно трем"
                       FontSize="15"
                       Margin="0 10 0 0"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 70"
                    Orientation="Horizontal">
            <TextBlock Text="a)"
                       FontSize="20"/>
            
            <TextBlock Text=" A: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tba"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" B:"
                       FontSize="20"
                       Margin="5 0 0 0"/>
            <TextBox Width="110"
                     x:Name="Tbb"
                     Margin="2 0 0 0"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 0"
                    Orientation="Horizontal">
            <TextBlock Text="b)"
                       FontSize="20"/>

            <TextBlock Text=" A: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tba1"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" B:"
                       FontSize="20"
                       Margin="5 0 0 0"/>
            <TextBox Width="110"
                     x:Name="Tbb1"
                     Margin="2 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" C:"
                       FontSize="20"
                       Margin="5 0 0 0"/>
            <TextBox Width="110"
                     x:Name="Tbc"
                     Margin="2 0 0 0"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 100 0 0">
            <Button Content="Ответ"
                    Padding="5"
                    FontWeight="Bold"
                    FontSize="20"
                    Width="110"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 80">
            <TextBlock Text="a) "
                       FontSize="20"
                       x:Name="TbA"/>

            <TextBlock Text="b)"
                       FontSize="20"
                       x:Name="TbB"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 2"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
