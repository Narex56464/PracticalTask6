<Page x:Class="WpfApp9.View.Pages.Task13Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task13Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 13"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 70 0 0">
            <TextBlock Text="Написать логическое выражение для определения стоимости переговоров, если стоимость с 22 часов до 8"
                       FontSize="15.5"/>

            <TextBlock Text="часов на 20% ниже, а в субботу и воскресенье дополнительно предоставляется скидка 10%. Использовать"
                       FontSize="15.5"/>

            <TextBlock Text="данные - t (время разговорва от 0 до 24 часов), dt (продолжительность разговора в минутах), s (стоимость"
                       FontSize="15.5"/>
            
            <TextBlock Text="минуты разгорва), d (день недели от 1 до 7)"
                       FontSize="15.5"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 80"
                    Orientation="Horizontal">
            <TextBlock Text="t: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbt"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" dt: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbdt"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" s: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbs"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" d: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbd"
                     Margin="0 0 0 0"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 100 0 0">
            <Button Content="Ответ"
                    Padding="5"
                    FontWeight="Bold"
                    FontSize="20"
                    Width="110"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 100">
            <TextBlock Text="Результат"
                       FontSize="20"
                       x:Name="TbA"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 14"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
