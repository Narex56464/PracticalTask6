<Page x:Class="WpfApp9.View.Pages.Task20Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task20Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 20"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 70 0 0">
            <TextBlock Text="Логическое выражение X ^ -(-Y ∨ Z) ∨ Y записать на алгоритмическом языке и составить для него"
                       FontSize="17"/>

            <TextBlock Text="таблицу истинности, то есть определить его значение для всех возможных значений логических"
                       FontSize="17"/>

            <TextBlock Text="переменных X, Y, Z"
                       FontSize="17"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 -100">
            <TextBlock Text="X       Y       Z"
                       FontSize="20"
                       Margin="0 0 0 0"/>

            <TextBlock Text="0       0       0"
                       FontSize="20"/>

            <TextBlock Text="0       0       1"
                       FontSize="20"/>

            <TextBlock Text="0       1       0"
                       FontSize="20"/>

            <TextBlock Text="1       0       0"
                       FontSize="20"/>

            <TextBlock Text="0       1       1"
                       FontSize="20"/>

            <TextBlock Text="1       1       0"
                       FontSize="20"/>

            <TextBlock Text="1       0       1"
                       FontSize="20"/>

            <TextBlock Text="1       1       1"
                       FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="210 100 0 0">
            <TextBlock Text="Result"
                       FontSize="20"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb0"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb1"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb2"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb3"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb4"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb5"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb6"/>

            <TextBlock Text=""
                       FontSize="20"
                       x:Name="Tb7"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 21"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
