<Page x:Class="WpfApp9.View.Pages.Task9Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task9Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 9"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 70 0 0">
            <TextBlock Text="Записать логическое выражение которое является истинным тогда, когда выполняются условия"
                       FontSize="17.5"/>

            <TextBlock Text="при заданных числах k, l, n, m. Если k=0, то l>m, но если k less 0, то 2l-3n less m"
                       FontSize="17.5"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 120"
                    Orientation="Horizontal">
            <TextBlock Text=" n: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbn"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" m: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbm"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" k: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbk"
                     Margin="0 0 0 0"
                     FontSize="20"/>

            <TextBlock Text=" l: "
                       FontSize="20"/>
            <TextBox Width="110"
                     x:Name="Tbl"
                     Margin="0 0 0 0"
                     FontSize="20"/>

        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 100 0 0">
            <Button Content="Ответ"
                    Padding="5"
                    FontWeight="Bold"
                    FontSize="20"
                    Width="110"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 100">
            <TextBlock Text="Результат"
                       FontSize="20"
                       x:Name="TbA"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 10"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
